<div class="field">
  <%= f.label :image %><br />
  <%= f.file_field :image, onchange: "previewImage()" %><br />
  <div>
    <img class="js-preview" width="100">
  </div>
  <% if @user.image.present? %>
  <div>
    <%= image_tag @user.image.variant(:thumb) %>
    <%= link_to t('views.common.destroy', name: User.human_attribute_name(:image)), user_attachments_path(@user), data: { turbo_method: :delete } %>
  </div>
  <% end %>
</div>

<div class="field">
  <%= f.label :name %><br />
  <%= f.text_field :name %>
</div>

<div class="field">
  <%= f.label :postal_code %><br />
  <%= f.text_field :postal_code %>
</div>

<div class="field">
  <%= f.label :address %><br />
  <%= f.text_field :address %>
</div>

<div class="field">
  <%= f.label :self_introduction %><br />
  <%= f.text_area :self_introduction %>
</div>

<% content_for :head do %>
  <%= javascript_importmap_tags "registrations" %>
<% end %>
