<p style="color: green"><%= notice %></p>

<h1><%= t('page_titles.index', model: Book.model_name.human) %></h1>

<div id="books">
  <% @books.each do |book| %>
    <div class="index-item">
      <%= render book %>
      <p>
        <%= link_to t('links.show', model: Book.model_name.human), book %>
      </p>
    </div>
  <% end %>
</div>
<nav class="page-nav">
  <%= link_to t('links.new', model: Book.model_name.human), new_book_path %>
</nav>
